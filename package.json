{
  "name": "react18-typescript-fullstack-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "playwright test",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:all",
    "build:all": "npm run build:server && npm run build:client",
    "build:server": "cd src/server/ && esbuild --bundle ./index.ts --outdir=../../dist --platform=node",
    "build:client": "cd src/client/ && esbuild --bundle ./index.tsx --outdir=../../dist/public --minify --sourcemap --define:process.env.NODE_ENV=\\\"production\\\" && copyfiles public/* ../../dist/",
    "dev:client": "npm start & cd src/client/ && esbuild --watch --bundle ./index.tsx --outdir=../../dist/public --minify --sourcemap=inline --define:process.env.NODE_ENV=\\\"production\\\" && copyfiles public/* ../../dist/",
    "start": "node -r dotenv/config .",
    "build:docker": "docker build . -t boilerplate:latest",
    "coverage": "istanbul report --root ./coverage"
  },
  "keywords": [],
  "author": "Tristram Woolf",
  "license": "ISC",
  "dependencies": {
    "@tremor/react": "^1.2.2",
    "date-fns": "^2.29.3",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "fetch-suspense": "^1.2.2",
    "helmet": "^6.0.1",
    "js-cookie": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.16.3",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  }
}
